---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { useTranslations } from '../../i18n';

const t = useTranslations('de');
---

<Layout title={`${t('site.title')} | ${t('site.description')}`}>
    <Navigation />
    <main>
        <section class="hero">
            <div class="container">
                <p class="hero__tagline">{t('hero.tagline')}</p>
                <div class="hero__cta">
                    <a href="/de/about" class="button">{t('hero.learn-more')}</a>
                    <a href="/de/solutions" class="button button--secondary">{t('hero.our-solutions')}</a>
                </div>
            </div>
        </section>

        <section class="values">
            <div class="container">
                <h2 class="section__title">{t('values.title')}</h2>
                <div class="values__grid">
                    <div class="value-card">
                        <h3 class="value-card__title">{t('values.modular.title')}</h3>
                        <p class="value-card__text">{t('values.modular.description')}</p>
                    </div>
                    <div class="value-card">
                        <h3 class="value-card__title">{t('values.modern.title')}</h3>
                        <p class="value-card__text">{t('values.modern.description')}</p>
                    </div>
                    <div class="value-card">
                        <h3 class="value-card__title">{t('values.meaningful.title')}</h3>
                        <p class="value-card__text">{t('values.meaningful.description')}</p>
                    </div>
                </div>
            </div>
        </section>
    </main>
    
    <Footer />
</Layout>

<!-- Copy the same styles from your English index.astro -->
<style>
    /* Layout */
    main {
        min-height: calc(100vh - 80px);
        display: flex;
        flex-direction: column;
        background-color: var(--color-bg-primary);
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    /* Hero Section */
    .hero {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 4rem 0;
        background-color: var(--color-bg-primary);
    }

    .hero__title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 300;
        color: var(--color-primary);
        margin: 0 0 1rem 0;
        letter-spacing: -0.02em;
    }

    .hero__tagline {
        font-size: clamp(1.25rem, 2.5vw, 1.75rem);
        color: var(--color-text-secondary);
        font-weight: 400;
        margin: 0 0 3rem 0;
    }

    .hero__cta {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    /* Values Section */
    .values {
        padding: 6rem 0;
        background-color: var(--color-bg-secondary);
    }

    .section__title {
        font-size: clamp(1.75rem, 3vw, 2.5rem);
        font-weight: 400;
        color: var(--color-primary);
        margin: 0 0 2.5rem 0;
        text-align: center;
    }

    .values__grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
    }

    .value-card {
        text-align: center;
        padding: 2rem 1rem;
        background-color: var(--color-bg-primary);
        border-radius: 8px;
        border: 1px solid var(--color-border);
    }

    .value-card__title {
        font-size: 1.5rem;
        font-weight: 500;
        color: var(--color-primary);
        margin: 0 0 1rem 0;
    }

    .value-card__text {
        font-size: 1rem;
        color: var(--color-text-secondary);
        line-height: 1.6;
        margin: 0;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .hero {
            min-height: 60vh;
            padding: 3rem 0;
        }

        .values {
            padding: 4rem 0;
        }

        .values__grid {
            gap: 1.5rem;
        }

        .value-card {
            padding: 1.5rem 1rem;
        }
    }
</style>